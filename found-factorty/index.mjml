<mjml>
  <mj-head>
    <mj-title>found Factory</mj-title>
    <mj-attributes>
      <mj-all font-family="markpro, sans-serif" font-size="12px" font-weight="400" line-height="12px" color="#223147" />
    </mj-attributes>
    <mj-style> @font-face { font-family: "markpro"; font-style: normal; font-weight: 400; font-display: swap; src: url("http://show-demo.herokuapp.com/found-factorty/fonts/MarkPro.ttf") format("truetype"); } @font-face { font-family: "markpro"; font-style: normal; font-weight: 500; font-display: swap; src: url("http://show-demo.herokuapp.com/found-factorty/fonts/MarkMedium.ttf") format("truetype"); } @font-face { font-family: "markpro"; font-style: normal; font-weight: 700; font-display: swap; src: url("http://show-demo.herokuapp.com/found-factorty/fonts/MarkBold.ttf") format("truetype"); } .bgSide{ background:#ffffff url("http://show-demo.herokuapp.com/found-factorty/img/bg2.png") no-repeat; height: 200px; background-size: cover; } .contentSide{border-right: 2px solid #d1d1d1; margin: 37px 0 0;} .mobileView { display: none; } .desktopView { display: block; } .social{display: inline-block; float: right; } @media only screen and (max-width:480px){.mobileView { display: block; } .desktopView { display: none !important; } .contentSide{border-right: none;} .xs-center{text-align:center !important;} .social{display: block; float: none; margin-top: 10px; }.bgSide{  height: 150px;} .logo{padding:50px 25px 20px !important } } </mj-style>
  </mj-head>
  <mj-body>
    <mj-wrapper full-width padding="0" background-color="#fcfcfc">
      <mj-section>
        <mj-column width="40%"  vertical-align="middle" css-class="bgSide">
