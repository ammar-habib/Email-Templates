          <mj-image css-class="logo" padding="0px 25px 30px" href="#"  target="_blank" width="140px" src="img/logo.png" alt="logo"></mj-image>
          <mj-text font-size="10px" align="center" line-height="12px">
            <a href="#" target="_blank" style="
    text-decoration: none;
    color: #fff;
    font-weight: 500;
">www.foundfactory.de</a>
          </mj-text>
        </mj-column>
        <mj-column width="58%" css-class="contentSide">
          <mj-text font-size="14px" font-weight="700" line-height="16.4px" padding="0 25px 0">John Doe</mj-text>
          <mj-text font-size="12px" font-weight="400" line-height="14.3px" padding="0 25px 8px">Graphic Designer</mj-text>
           <mj-image padding="0"  width="143px" align="left" src="img/line-big.png" alt="line"></mj-image>
          <mj-text font-size="12px" font-weight="500" line-height="14.3px" padding="15px 25px 10px">1234 Street, Green Park, Suite 123, Smallcity,<br />Stateville, USA 775852</mj-text>
          <mj-text font-size="12px" font-weight="500" line-height="14.3px" padding-top="0">+1 (234) 567 - 890 <span style="
    padding: 0 15px;
">|</span>0123 - 456 - 789</mj-text>
          <mj-text font-size="12px" font-weight="500" line-height="14.3px" padding="0 25px">
            <span>youremail@yourwebsite.com</span> 
            <span class="social">
              <a href="#" target="_blank" style="text-decoration: none;margin: 0 2px;">
                <img src="img/fb.png" alt="fb-icon" />
              </a>
              <a href="#" target="_blank" style="text-decoration: none;margin: 0 2px;">
                <img src="img/tw.png" alt="tw-icon" />
              </a>
              <a href="#" target="_blank" style="text-decoration: none;margin: 0 2px;">
                <img src="img/instra.png" alt="intre-icon" />
